<!-- Page for the show action -->
<div class="container text-center">
  <h1 id="header">The cocktail you selected:</h1>
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3">
        <div class="task-card">
          <p class="task-card-name"><%= @cocktail.name %></p>
        </div>
      </div>
    </div>

    <h2 class="header2">The ingredients are:</h2>
      <% @doses.each do |dose| %>
        <div class="row">
          <div class="col-xs-6 col-xs-offset-3">
            <div class="task-card">
              <p class="task-card-name"><%= dose.ingredient.name %> </p>
              <p class="task-card-importance"><%= dose.description %></p>
              <%= link_to "Delete", cocktail_dose_path(dose.cocktail, dose), method: :delete %>
            </div>
          </div>
        </div>
      <% end %>
    <!-- Button to navigate back to the homepage -->
    <%= link_to "Home", cocktails_path, class: "btn btn-primary" %>
</div>
